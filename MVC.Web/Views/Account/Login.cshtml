    <script>
        function LoginUser() {

            var isvalid = true;
            var User = $("#txtusername").val();
            var Password = $("#txtPassword").val();

            if (User == "") {
                $("#txtusername").removeClass("form-control");
                $("#txtusername").addClass("form-control required has-error");
                isvalid = isvalid && false;
            } else {
                $("#txtusername").removeClass("form-control required has-error");
                $("#txtusername").addClass("form-control");
            }
            if (Password == "") {
                $("#txtPassword").removeClass("form-control");
                $("#txtPassword").addClass("form-control required has-error");
                isvalid = isvalid && false;
            } else {
                $("#txtPassword").removeClass("form-control required has-error");
                $("#txtPassword").addClass("form-control");
            }



            if (isvalid == false) {
                toastr.error('Please fill required fields!');
                //alert("Error! Please fill required fields!");
                /* return false;*/
               $('#dvError').show();
               return false;
            }
         $('#dvError').hide();
            var data = { "UserName": User, "Password": Password  };
            data = JSON.stringify(data);

            $.ajax({
                url: "/Account/LoginSubmit",
                data: data,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                   if (response.status == "0" ) {
                        toastr.error('Incorrect Username or Password');

                    }
                    else {
                        toastr.success('Login Attempt made succesffull!')

                         window.location.href = '@Url.Action("Dashboard", "Dashboard")';

                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    </script>

